{
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.addMissingImports": "explicit",
    "source.removeUnusedImports": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#a94745",
    "titleBar.inactiveBackground": "#a94745",
    "titleBar.activeForeground": "#ffffff"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "tailwindCSS.experimental.configFile": {
    "apps/storybook/.storybook/globals.css": "apps/storybook/.storybook/**",
    "apps/web/src/app/globals.css": "apps/web/src/app/**",
    "packages/ui/src/styles.css": "packages/ui/src/**"
  }
}
